<UserControl
    x:Class="LinkedIdSelector.View.DataGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LinkedIdSelector.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="clr-namespace:LinkedIdSelector.ViewModel"
    d:DataContext="{d:DesignInstance Type=local:DataGridViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>

        <Label Grid.Row="0">Filter elements by:</Label>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <CheckBox
                Margin="0,5,5,5"
                Content="By Current View"
                IsChecked="{Binding FilterByView}" />
            <Label Margin="10,0">II</Label>
            <CheckBox
                Margin="5"
                Content="FilterOne"
                IsChecked="{Binding FilterOne}" />
            <CheckBox
                Margin="5"
                Content="FilterTwo"
                IsChecked="{Binding FilterTwo}" />
        </StackPanel>

        <Grid Grid.Row="2">
            <DataGrid
                x:Name="ElementData"
                Width="Auto"
                Height="Auto"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                d:ItemsSource="{d:SampleData}"
                AutoGenerateColumns="False"
                CellStyle="{StaticResource CustomCellStyle}"
                ColumnHeaderStyle="{StaticResource ModernColumnHeaderStyle}"
                GridLinesVisibility="None"
                ItemsSource="{Binding FilteredItems}"
                RowStyle="{StaticResource CustomRowStyle}"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectedItem="{Binding SelectedRow}"
                Style="{StaticResource ModernDataGridStyle}">

                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding ElementId}" Header="Revit Id" />
                    <DataGridTextColumn Binding="{Binding ElementName}" Header="Element Name" />
                    <DataGridTextColumn Binding="{Binding ElementType}" Header="Element Type" />
                    <DataGridTextColumn
                        Binding="{Binding StatusForInterfaceLabelText}"
                        CellStyle="{StaticResource StatusCellStyle}"
                        Header="Status Example" />

                    <DataGridTemplateColumn Header="Dropbox Example">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <ComboBox
                                        ItemsSource="{Binding RecessApproveOptions}"
                                        SelectedItem="{Binding ChosenApproveOption, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource ComboBoxFlatStyle}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Checkbox example">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ApprovalCheckbox}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Button Example">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Background="{StaticResource ApplicationBackGround}" Command="{Binding SeeElementCommand}">3D view</Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>


